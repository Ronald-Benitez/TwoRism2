<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="20dp"
    android:background="@drawable/cardshape"
    android:orientation="vertical"
    android:layout_height="wrap_content">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginTop="30dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvVehicleTuition"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="TextView"
            android:textColor="@color/letter"
            android:textSize="20sp" />

        <Button
            android:id="@+id/btnSee"
            android:layout_width="20dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:cornerRadius="20dp"
            android:backgroundTint="@color/principal"
            android:drawableTint="@color/white"
            android:drawableRight="@drawable/ic_baseline_edit_24"
            android:text="Editar" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvVehicleType"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:text="TextView"
            android:textColor="@color/letter"
            android:textSize="20sp" />

        <Button
            android:id="@+id/btnDelete"
            android:layout_width="20dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="@color/principal"
            app:cornerRadius="20dp"
            android:drawableTint="@color/white"
            android:drawableRight="@drawable/ic_baseline_delete_24"
            android:text="Eliminar" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:layout_weight="1"
            android:textColor="@color/letter"
            android:text="Capacidad: " />
        <TextView
            android:id="@+id/tvVehicleCapacity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:layout_weight="1"
            android:textColor="@color/letter"
            android:text="TextView" />
    </LinearLayout>


</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/back"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".Provider.ProviderMainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:background="@drawable/forms_shape"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnAddVehicle"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:layout_weight="1"
                android:backgroundTint="@color/principal"
                android:layout_margin="2dp"
                android:text="Registrar vehiculo" />

            <Button
                android:id="@+id/btnListarVehiculo"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:backgroundTint="@color/secundary"
                android:layout_margin="2dp"
                android:text="Listar Vehiculos" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnOrganizarViaje"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:layout_weight="1"
                android:backgroundTint="@color/rate"
                android:layout_margin="2dp"
                android:text="Organizar Viaje" />

            <Button
                android:id="@+id/btnProfile"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:backgroundTint="@color/advert"
                android:layout_margin="2dp"
                android:text="Perfil" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>